<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DroneController">
   <children>
      <BorderPane fx:id="mainBody">
         <top>
            <HBox fx:id="titleBar" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="title" text="Drone:">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </top>
         <center>
            <GridPane fx:id="grid" prefWidth="600.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label fx:id="model" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label fx:id="batteryPercentage" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label fx:id="manufacturer" GridPane.columnIndex="3" />
                  <Label fx:id="status" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <Label fx:id="speed" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                  <Label fx:id="lastSeen" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label fx:id="flightTime" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                  <Label fx:id="batteryLifeEstimation" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label fx:id="avgSpeed" GridPane.columnIndex="3" GridPane.rowIndex="4" />
                  <Label fx:id="serialNr" GridPane.columnIndex="1" />
                   <Label fx:id="modelT" text="Model: " GridPane.rowIndex="1" />
                   <Label fx:id="batteryPercentageT" text="Battery Percentage: " GridPane.rowIndex="2" />
                   <Label fx:id="manufacturerT" text="Manufacturer: " GridPane.columnIndex="2" />
                   <Label fx:id="statusT" text="Status: " GridPane.columnIndex="2" GridPane.rowIndex="1" />
                   <Label fx:id="speedT" text="Speed: " GridPane.columnIndex="2" GridPane.rowIndex="2" />
                   <Label fx:id="lastSeenT" text="Last Seen: " GridPane.rowIndex="3" />
                   <Label fx:id="flightTimeT" text="Flight Time: " GridPane.columnIndex="2" GridPane.rowIndex="3" />
                   <Label fx:id="batteryLifeEstimationT" text="Battery Life Estimation: " GridPane.rowIndex="4" />
                   <Label fx:id="avgSpeedT" text="Average Speed: " GridPane.columnIndex="2" GridPane.rowIndex="4" />
                   <Label fx:id="serialNrT" text="Serial Number: " />
               </children>
            </GridPane>
         </center>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </BorderPane>
   </children>
</AnchorPane>
