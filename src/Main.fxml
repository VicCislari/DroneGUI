<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main">
   <children>
      <BorderPane fx:id="mainWindow" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <BorderPane BorderPane.alignment="CENTER">
               <left>
                  <Label text="DroneSim" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </left>
               <right>
                  <HBox BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" text="Drones" />
                        <Button mnemonicParsing="false" text="Flight Dynamics" />
                        <Button mnemonicParsing="false" text="History" />
                     </children>
                  </HBox>
               </right>
            </BorderPane>
         </top>
         <left>
             <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
               <content>
                  <VBox fx:id="vBoxButtonList">
                     <children>
                        <Button maxWidth="Infinity" mnemonicParsing="false" text="Button" />
                        <Button maxWidth="Infinity" mnemonicParsing="false" text="Button" />
                     </children>
                  </VBox>
               </content>
             </ScrollPane>
         </left>
          <center>
              <Pane /> <!-- Placeholder for center region -->
          </center>
      </BorderPane>
   </children>
</AnchorPane>
